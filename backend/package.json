{
  "name": "patriot-backend",
  "version": "1.0.0",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "migrate": "node-pg-migrate up --dir migrations --database-url $DATABASE_URL --no-lock",
    "migrate:down": "node-pg-migrate down --dir migrations --database-url $DATABASE_URL --no-lock",
    "db:verify": "node scripts/verify_migration.js",
    "seed": "node scripts/seed_from_csv.js",
    "db:schema": "node scripts/db_schema_report.js",
    "db:schema:json": "node scripts/db_schema_json.js",
    "db:cleanup:phone_raw": "node scripts/cleanup_customer_phone_raw.js",
    "db:fix:phones": "node scripts/fix_phone_scientific_notation.js",
    "db:fix:phones:legacy": "node scripts/fix_customer_phones.js",
    "smoke:test": "node scripts/smoke_test_endpoints.js",
    "db:import:orbisx": "node scripts/import_orbisx_customers_xlsx.js",
    "db:import:calendar": "node scripts/import_calendar_events_xlsx.js",
    "db:import:all": "node scripts/import_orbisx_customers_xlsx.js \"$ORBISX_XLSX\" && node scripts/import_calendar_events_xlsx.js \"$CALENDAR_XLSX\""
  },
  "dependencies": {
    "csv-parse": "^5.5.6",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "node-pg-migrate": "^7.6.2",
    "pg": "^8.12.0",
    "xlsx": "^0.18.5"
  }
}
